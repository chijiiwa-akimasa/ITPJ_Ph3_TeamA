<%- include("partials/header2") %>

<nav class="navbar">
  <ul class="top">
    <h3>経費</h3>
    <li><a href="/jmkotsuhi">交通費</a></li>
  </ul>
</nav>

<form action="/jmkeihi" method="post"> <!-- 年月 -->
  <input type="hidden" name="year" value="<%- year %>">
  <input type="hidden" name="month" value="<%- nowmonth %>">
  <input type="hidden" name="status" value="1=1">
  <input type="hidden" name="employee" value="1=1">
  <div class="date_box">
    <button class="last" name="last" value="-1">◀</button>
    <b><%- year %>年 <%- nowmonth %>月分</b>
    <button class="next" name="next" value="+1">▶</button>
  </div>
</form>

<form action="/jmkeihi" method="post">
  <div class="search_box">
    <input type="hidden" name="year" value="<%- year %>">
    <input type="hidden" name="month" value="<%- nowmonth %>">
    <div class="d">表示条件：ステータス</div>
    <select name="status" id="status" class="select">
      <option value="1=1">全て</option>
      <option value="status='00'">未申請</option>
      <option value="status='11'">JobM申請中</option>
      <option value="status='19'">JobM却下</option>
      <option value="status='21'">経理申請中</option>
      <option value="status='29'">承認</option>
      <option value="status='88'">却下</option>
    </select>
    <div class="d">社員</div>
    <select name="employee" id="employee" class="select">
      <option value="1=1">全て</option>
    </select>
    <input type="submit" name="display" value="表示" class="search">  
  </div>
</form>

<!-- テーブルタイトル -->

<table>
  <thead>
    <colgroup>
      <col class="col1" style='width:6.4%;'>
      <col class="col2" style='width:4.2%;'>
      <col class="col3" style='width:7%;'>
      <col class="col4" style='width:7%;'>
      <col class="col5" style='width:4.2%;'>
      <col class="col6" style='width:4.2%;'>
      <col class="col7" style='width:4.2%;'>
      <col class="col8" style='width:4.2%;'>
      <col class="col9" style='width:8.5%;'>
      <col class="col10" style='width:2.8%;'>
      <col class="col11" style='width:2.8%;'>
      <col class="col12" style='width:38.6%;'>
    </colgroup>
    <tr align="center" >
      <th rowspan="2">ステータス</th>
      <th rowspan="2">RefNo</th>
      <th rowspan="2">勘定科目</th>
      <th rowspan="2">摘要</th>
      <th rowspan="2">立替</th>
      <th rowspan="2">JobC</th>
      <th rowspan="2">利用日</th>
      <th rowspan="2">金額</th>
      <th rowspan="2">支払先</th> 
      <th colspan="3" class="syoninn">JM承認</th>
    </tr>
    <tr align="center" >
      <th class="syoninn1">承認</th>
      <th class="kyakka">却下</th>
      <th class="comment">コメント入力</th>
    </tr>
  </thead>
</table>
</div>

<form method="POST" action="/jmkehi" name='set'>
<div class="data">

<!-- ここから下がセット -->
<table>
  <tr> 
    <th class="employeeT"><%= emp_no %></th>
    <th class="jobT"><%= job_no %></th>
    <th class="sumT">合計金額（DBより）</th>
  </tr>
</table>

  <!-- サンプル -->
<div class="div-tbl3">
<table>
  <colgroup>
    <col class="col1" style='width:6.4%;'>
    <col class="col2" style='width:4.2%;'>
    <col class="col3" style='width:7%;'>
    <col class="col4" style='width:7%;'>
    <col class="col5" style='width:4.2%;'>
    <col class="col6" style='width:4.2%;'>
    <col class="col7" style='width:4.2%;'>
    <col class="col8" style='width:4.2%;'>
    <col class="col9" style='width:8.5%;'>
    <col class="col10" style='width:2.8%;'>
    <col class="col11" style='width:2.8%;'>
    <col class="col12" style='width:37.2%;'>
  </colgroup>
  <tbody>
  <div class='tbody'>

    <% for(let i in status) { %> 
      <tr align="center" >
      <td><%=status[i] %></td>
      <td><%=ref_no[i] %></td>
      <td><%=code_name[i] %></td>
      <td><%=summary[i] %></td>
      <td><input id="chkbox0" type="checkbox"/></td>
      <td><input id="chkbox0" type="checkbox"/></td>
      <td bgcolor="lightgrey"><%=day[i] %></td>
      <td bgcolor="lightgrey"><%= amount[i] %></td>
      <td bgcolor="lightgrey"><%= payee[i] %></td>
      <td rowspan="2">
        <input type="radio" class='form-control' value="1" onclick="radioDeselection(this, 1)" name=<%= radioname[i] %> />
      </td>
      <td rowspan="2">
        <input type="radio" class='form-control' value="2" onclick="radioDeselection(this, 2)" name=<%= radioname[i] %> />
      </td>
      <td rowspan="2">
        <input type="text" class='form-control'/>
      </td>
    </tr>
    <tr>
      <td colspan="9" class="bikoran"><%=remarks %></td>
    </tr>
    <% } %>   
  
<!-- ここから上がセット -->
</div>

<div class="form-group btn1">
  <input type="button" id="b4" name='b4' value="全て承認" class="allcheck" onClick="allcheck(set,1)">
  <input type="button" id="b3" name='b3' value="全解除" class="allcheck" onClick="allcheckout(set,0)">
  <input type="submit" id='confirm' value="確定" class="OK" name='confirm'>
</div>

