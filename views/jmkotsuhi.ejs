<%- include("partials/header2") %>

<nav class="navbar">
  <ul class="top">
    <li><a href="/jmkehi">経費</a></li>
    <h3>交通費</h3>
  </ul>
</nav>

<form action="/jmkotsuhi" method="post"> <!-- 年月 -->
  <input type="hidden" name="year" value="<%- year %>">
  <input type="hidden" name="month" value="<%- nowmonth %>">
  <input type="hidden" name="status" value="1=1">
  <input type="hidden" name="employee" value="1=1">
  <div class="date_box">
    <button class="last" name="previousmonth" value="-1">◀</button>
    <b><%- year %>年 <%- nowmonth %>月分</b>
    <button class="next" name="nextmonth" value="+1">▶</button>
  </div>
</form>

<form action="/jmkotsuhi" method="post">
  <div class="search_box">
    <input type="hidden" name="year" value="<%- year %>">
    <input type="hidden" name="month" value="<%- nowmonth %>">
    <div class="d">表示条件：ステータス</div>
    <select name="status" id="status" class="select">
      <option value="1=1">全て</option>
      <option value="status='00'">未申請</option>
      <option value="status='11'">JobM申請中</option>
      <option value="status='19'">JobM却下</option>
      <option value="status='21'">経理申請中</option>
      <option value="status='29'">承認</option>
      <option value="status='88'">却下</option>
    </select>
    <div class="d">社員</div>
    <select name="employee" id="employee" class="select">
      <option value="1=1">全て</option>
    </select>
    <input type="submit" name="display" value="表示" class="search">  
  </div>
</form>

  <!-- テーブルタイトル -->
<table>
  <tr>
    <th width="8%">ステータス</th>
    <th width="3%">月</th>
    <th width="3%">日</th>
    <th width="9%">From</th>
    <th width="9%">Via</th>
    <th width="9%">To</th>
    <th width="8%">交通手段</th>
    <th width="4%">回数</th>
    <th width="5%">立替</th>
    <th width="5%">JobC</th>
    <th width="5%">単価</th>
    <th width="5%">小計</th>
    <th width="5%">RefNo</th>
    <th width="4%">承認</th>
    <th width="4%">却下</th>
    <th width="16%">コメント</th>
  </tr>
</table>

<!-- サブヘッダー -->
<!-- まだ -->

<!-- データテーブル -->
<form method="POST" action="/jmkotsuhi" name='set'>
  <table>
    <% for(let i in status) { %> 
    <tr>
      <td width="8%" class="first" rowspan="2"><%=status[i] %></td>
      <td width="3%"><%=month[i] %></td>
      <td width="3%"><%=day[i] %></td>
      <td width="9%"><%=trans_from[i] %></td>
      <td width="9%"><%=trans_waypoint[i] %></td>
      <td width="9%"><%=trans_to[i] %></td>
      <td width="8%"><%=trans_type[i] %></td>
      <td width="4%"><%=count[i] %></td>
      <td width="5%"><input id="chkbox0" type="checkbox"/></td>
      <td width="5%"><input id="chkbox0" type="checkbox"/></td>
      <td width="5%" class="greyout"><%= amount[i] %></td>
      <td width="5%" class="greyout"><%= subtotal[i] %></td>
      <td width="5%" class="greyout"><%=ref_no[i] %></td>
      <td width="4%" class="first" rowspan="2">
        <input type="radio" class='form-control' value="1" onclick="radioDeselection(this, 1)" name=<%= radioname[i] %> />
      </td>
      <td width="4%" class="first" rowspan="2">
        <input type="radio" class='form-control' value="2" onclick="radioDeselection(this, 2)" name=<%= radioname[i] %> />
      </td>
      <td width="16%" class="first" rowspan="2">
        <input type="text" class='textsize'/>
      </td>
    </tr>
    <tr>
      <td class="comment" colspan="12"><%=remarks %></td>
    </tr>
    <% } %>
  </table>

<div class="box">
  <input type="button" id="b4" name='b4' value="全て承認" class="allcheck" onClick="allcheck(set,1)">
  <input type="button" id="b3" name='b3' value="全解除" class="allcheck2" onClick="allcheckout(set)">
  <input type="submit" id='confirm' value="確定" class="OK" name='confirm'>
</div>

<%- include("partials/footer2") %>